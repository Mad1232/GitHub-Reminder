<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa">

    <!-- Return Button in top left corner -->
    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Return"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:textSize="16sp"/>

    <!-- Title for the screen -->
    <TextView
        android:id="@+id/tv_manage_medications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="24dp"
        android:text="Manage Medications"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Medication Info Section -->
    <TextView
        android:id="@+id/tv_medication_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Medication Info for Customer:"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- ScrollView for medication information -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:scrollbars="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- Medication Type Section -->
    <TextView
        android:id="@+id/tv_select_medication_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Select Medication Type"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Spinner to select medication type -->
    <Spinner
        android:id="@+id/spinner_medication_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp" />

    <!-- Pet Selection Section -->
    <TextView
        android:id="@+id/tv_select_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Select Pet"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Spinner to select a pet -->
    <Spinner
        android:id="@+id/spinner_pets"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp" />

    <!-- Button to assign medication to selected pet -->
    <Button
        android:id="@+id/btn_assign_medication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Assign Medication"
        android:padding="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"/>

</androidx.appcompat.widget.LinearLayoutCompat>