<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa">

    <!-- Button to go back to previous page -->
    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#673AB7"
        android:padding="8dp"
        android:text="Return"
        android:textColor="#FFFFFF" />

    <!-- Header Text -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Medications"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- List of Medications -->
    <TextView
        android:id="@+id/tv_medication_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:padding="8dp"
        android:text="Medication listed here"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#FFFFFF"/>

    <!-- Input for New Medication -->
    <EditText
        android:id="@+id/et_medication_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:hint="Enter Medication Details"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Buttons for Managing Medications -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- Add Medication Button -->
        <Button
            android:id="@+id/btn_add_medication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Medication"
            android:padding="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

        <!-- Edit Medication Button -->
        <Button
            android:id="@+id/btn_edit_medication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Medication"
            android:padding="8dp"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <!-- Delete Medication Button -->
        <Button
            android:id="@+id/btn_delete_medication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Medication"
            android:padding="8dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>